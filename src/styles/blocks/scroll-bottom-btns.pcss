.hero__bottom-buttons {
    display: flex;
    justify-content: center;
}

.scroll-down-button {
    display: flex;
    text-decoration: none;
    font-size: 18px;
    font-weight: 600;
    color: $text-color;

    &__svg {
        width: 14px;
        height: 14px;
        margin-left: 1rem;
        svg {
            fill: $text-color;
        }
    }

    &:hover {
        .scroll-down-button__svg svg {
            fill: $hover-color;
        }
    }
}