.hero__bottom-buttons {
    display: flex;
    justify-content: center;
}

.scroll-down-button {
    display: inline-block;
    text-decoration: none;
    font-size: 18px;
    font-weight: 600;
    color: $text-color;
    padding-right: 3rem;
    background: svg-load('scroll.svg', fill=$text-color, width=100%, height=100%) right no-repeat;
}