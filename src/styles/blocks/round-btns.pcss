.round-btn {
    width: 53px;
    height: 53px;
    border-radius: 50%;
    border: 2px solid #464E62;

    &:first-child {
        margin-right: 28px;
    }

    &--pointer--right {

    }

}

.pointer-left,
.pointer-right {
    width: 10px;
    fill: #464E62;
}

.pointer-right {
    transform: rotate(180deg);
}